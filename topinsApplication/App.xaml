<Application x:Class="topinsApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:topinsApplication"
             StartupUri="design/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/tpToolbox;component/design/themes/tpDarkTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/tpToolbox;component/design/themes/tpControlBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/topinsApplication;component/themes/tpDarkBrushsExtended.xaml" />
                <ResourceDictionary Source="pack://application:,,,/topinsApplication;component/themes/tpGeneric.xaml" />

                <ResourceDictionary>
                    <local:tpMultiValueConverter x:Key="MultiValueConverter"/>
                    <local:tpBooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                    <local:tpInverseBooleanConverter x:Key="InverseBooleanConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
