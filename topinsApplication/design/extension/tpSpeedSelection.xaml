<UserControl x:Class="topinsApplication.tpSpeedSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:topinsApplication"
             mc:Ignorable="d" Focusable="True">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <Trigger Property="Visibility" Value="Visible">
                    <Setter Property="FocusManager.FocusedElement" Value="{Binding ElementName=SelectSpeed}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>

    <!--<i:Interaction.Triggers>
        <i:EventTrigger EventName="PreviewMouseDown">
            <i:InvokeCommandAction Command="{Binding PreventEventBubbling}" PassEventArgsToCommand="True"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>-->

    <Grid>
        <StackPanel Orientation="Horizontal">
            <ComboBox x:Name="SelectSpeed" ItemsSource="{Binding SpeedSelectionItems}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" DisplayMemberPath="Name" Width="120" Margin="0,0,2,0"/>
            <TextBox Text="1000" Width="40" Margin="2,0,2,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="20"/>
            <Button Command ="{Binding Reset}" Margin="2,0,2,0" Width="16" Height="16" ToolTip="기본값">
                <Path Data="{DynamicResource Refresh}" Fill="#FF7EE07E" Stretch="Uniform"/>
            </Button>
            <Button Command ="{Binding Transmit}" IsEnabled="{Binding IsEnabled}" Margin="2,0,0,0" Width="16" Height="16" ToolTip="설정">
                <Path Data="{DynamicResource Transmit}" Fill="#FF7EE07E" Stretch="Uniform"/>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
