<UserControl x:Class="topinsApplication.tpToolBarExtended"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:topinsApplication"
             mc:Ignorable="d">
    <Grid Margin="-6,0,0,0">
        <ToolBarTray Background="Transparent" Orientation="Vertical">
            <ToolBar >
                <ToggleButton Command="{Binding }" Width="24" Height="24" ToolTip="AI" Margin="0,0,0,0">
                    <Path Data="{DynamicResource AI}" Fill="#FF999999" Stretch="Uniform" />
                </ToggleButton>
                
                <Separator Background="#FF3D3D3D"/>

                <ToggleButton Command="{Binding }" Width="24" Height="24" ToolTip="Pixel correction" Margin="0,0,0,0">
                    <Path Data="{DynamicResource AI}" Fill="#FF999999" Stretch="Uniform" />
                </ToggleButton>
                <Button Width="24" Height="24"/>

            </ToolBar>
        </ToolBarTray>
    </Grid>
</UserControl>
