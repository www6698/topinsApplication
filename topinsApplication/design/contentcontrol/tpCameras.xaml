<UserControl x:Class="topinsApplication.tpCameras"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:topinsApplication"
             mc:Ignorable="d">
    <Grid>
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="Maximized">
                        <Setter Property="Margin" Value="6,6,6,8" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="7"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="1"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="1"/>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="4" Grid.Column="1">
            <ListView ItemsSource="{Binding IDS}"
                      SelectedItem="{Binding SelectedIDItem, Mode=TwoWay}"
                      Width="500" Height="240" FontSize="24">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="160" DisplayMemberBinding="{Binding ID}"/>
                        <GridViewColumn Header="Device Name" Width="340" DisplayMemberBinding="{Binding ModelName}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="3">
            <Border BorderBrush="#FF383838" BorderThickness="1,1,1,1">
                <Grid Width="360" Height="240">
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="Maximized">
                                    <Setter Property="Margin" Value="6,6,6,8" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="1"/> 
                        <ColumnDefinition/>
                        <ColumnDefinition Width="1"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="1" Content="{Binding ModelName}" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Label Grid.Column="1" Content="Device Version" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Label Grid.Column="3" Content="{Binding DeviceVersion}" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Label Grid.Column="1" Content="ID" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Label Grid.Column="3" Content="{Binding ID}" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Label Grid.Column="1" Content="Address" HorizontalAlignment="Right" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Label Grid.Column="3" Content="{Binding Address}" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Label Grid.Column="1" Content="LLA" HorizontalAlignment="Right" Grid.Row="4" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Label Grid.Column="3" Content="{Binding LLA}" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Label Grid.Column="1" Content="DHCP" HorizontalAlignment="Right" Grid.Row="5" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Label Grid.Column="3" Content="{Binding DHCP}" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Label Grid.Column="1" Content="Static IP" HorizontalAlignment="Right" Grid.Row="6" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Label Grid.Column="3" Content="{Binding Persistent}" HorizontalAlignment="Left" Grid.Row="6" VerticalAlignment="Center" Margin="10,0,0,0"/>

                    <Separator Grid.Column="2" Grid.RowSpan="7" Background="#FF3D3D3D">
                        <Separator.LayoutTransform>
                            <RotateTransform Angle="90"/>
                        </Separator.LayoutTransform>
                    </Separator>
                </Grid>
            </Border>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Bottom" Margin="0,4,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                    <Button Content="Refresh"
                            Command="{Binding Source={x:Static local:tpWorkspace.Workspace}, Path=RefreshCAM}"
                            CommandParameter="{Binding Path=Mvvm}"
                            IsEnabled="{Binding Refresh, Mode=TwoWay}"
                            Width="80"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <Button Content="Connect"
                            Command="{Binding Source={x:Static local:tpWorkspace.Workspace}, Path=ConnectCAM}"
                            Margin="0,0,6,0" Width="80">
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                <Binding Path="Device"/>
                                <Binding RelativeSource="{RelativeSource AncestorType={x:Type Window}}"/>
                            </MultiBinding>
                        </Button.CommandParameter>
                    </Button>
                    <Button Content="Cancel"
                            Command="{Binding CloseWindow}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                            Margin="6,0,0,0" Width="80"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        
    </Grid>
</UserControl>
