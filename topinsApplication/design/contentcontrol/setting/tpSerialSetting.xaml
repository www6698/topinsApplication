<UserControl x:Class="topinsApplication.tpSerialSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:topinsApplication"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
            <Label Content="COM Port" Margin="3,3,6,0" Width="105" HorizontalContentAlignment="Right"/>
            <ComboBox ItemsSource="{Binding Ports}" SelectedItem="{Binding SelectedPort}" Margin="6,0,6,0" Width="160"/>
            <Button Command="{Binding }" Width="16" Height="16" ToolTip="" Margin="18,0,6,0">
                <Path Data="{DynamicResource Refresh}" Fill="#FF4692CC" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>
        
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
            <Label Content="Baud Rate" Margin="3,3,6,0" Width="105" HorizontalContentAlignment="Right"/>
            <ComboBox ItemsSource="{Binding BaudRate}" SelectedItem="{Binding SelectedBaudRate}" Margin="6,0,6,0" Width="160" />
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="9600" Margin="0,4,8,0" Width="90" HorizontalContentAlignment="Right" FontSize="10" Foreground="#FF858585" FontWeight="Bold"/>
            <Button Command="{Binding }" Width="16" Height="16" ToolTip="" Margin="0,1,0,0">
                <Path Data="{DynamicResource Refresh}" Fill="#FF4692CC" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>
        
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal">
            <Label Content="Data Bits" Margin="3,3,6,0" Width="105" HorizontalContentAlignment="Right"/>
            <ComboBox ItemsSource="{Binding DataBits}" SelectedItem="{Binding SelectedDataBits}" Margin="6,0,6,0" Width="160" />
        </StackPanel>
        <StackPanel Grid.Row="6" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="8" Margin="0,4,8,0" Width="90" HorizontalContentAlignment="Right" FontSize="10" Foreground="#FF858585" FontWeight="Bold"/>
            <Button Command="{Binding }" Width="16" Height="16" ToolTip="" Margin="0,1,0,0">
                <Path Data="{DynamicResource Refresh}" Fill="#FF4692CC" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>
        
        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal">
            <Label Content="Stop Bits" Margin="3,3,6,0" Width="105" HorizontalContentAlignment="Right"/>
            <ComboBox ItemsSource="{Binding StopBits}" SelectedItem="{Binding SelectedStopBits}" Margin="6,0,6,0" Width="160" />
        </StackPanel>
        <StackPanel Grid.Row="8" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="StopBits.One" Margin="0,4,8,0" Width="90" HorizontalContentAlignment="Right" FontSize="10" Foreground="#FF858585" FontWeight="Bold"/>
            <Button Command="{Binding }" Width="16" Height="16" ToolTip="" Margin="0,1,0,0">
                <Path Data="{DynamicResource Refresh}" Fill="#FF4692CC" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>
        
        <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Horizontal">
            <Label Content="Parity" Margin="3,3,6,0" Width="105" HorizontalContentAlignment="Right"/>
            <ComboBox ItemsSource="{Binding Parity}" SelectedItem="{Binding SelectedParity}" Margin="6,0,6,0" Width="160" />
        </StackPanel>
        <StackPanel Grid.Row="10" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Parity.None" Margin="0,4,8,0" Width="90" HorizontalContentAlignment="Right" FontSize="10" Foreground="#FF858585" FontWeight="Bold"/>
            <Button Command="{Binding }" Width="16" Height="16" ToolTip="" Margin="0,1,0,0">
                <Path Data="{DynamicResource Refresh}" Fill="#FF4692CC" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>
        
        <StackPanel Grid.Row="12" Grid.Column="1" Orientation="Horizontal">
            <Label Content="Hand Shake" Margin="3,3,6,0" Width="105" HorizontalContentAlignment="Right"/>
            <ComboBox ItemsSource="{Binding Handshake}" SelectedItem="{Binding SelectedHandshake}" Margin="6,0,6,0" Width="160" />
        </StackPanel>
        <StackPanel Grid.Row="12" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Parity.None" Margin="0,4,8,0" Width="90" HorizontalContentAlignment="Right" FontSize="10" Foreground="#FF858585" FontWeight="Bold"/>
            <Button Command="{Binding }" Width="16" Height="16" ToolTip="" Margin="0,1,0,0">
                <Path Data="{DynamicResource Refresh}" Fill="#FF4692CC" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>
        
        <StackPanel Grid.Row="14" Grid.Column="1" Orientation="Horizontal">
            <Label Content="Serial Data" Margin="3,3,6,0" Width="105" HorizontalContentAlignment="Right"/>
            <ComboBox ItemsSource="{Binding SerialData}" SelectedItem="{Binding SelectedSerialData}" Margin="6,0,6,0" Width="160" />
        </StackPanel>
        <StackPanel Grid.Row="14" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="SerialData" Margin="0,4,8,0" Width="90" HorizontalContentAlignment="Right" FontSize="10" Foreground="#FF858585" FontWeight="Bold"/>
            <Button Command="{Binding }" Width="16" Height="16" ToolTip="" Margin="0,1,0,0">
                <Path Data="{DynamicResource Refresh}" Fill="#FF4692CC" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>
        
        <StackPanel Grid.Row="16" Grid.Column="1" Orientation="Horizontal">
            <Label Content="Serial Error" Margin="3,3,6,0" Width="105" HorizontalContentAlignment="Right"/>
            <ComboBox ItemsSource="{Binding SerialError}" SelectedItem="{Binding SelectedSerialError}" Margin="6,0,6,0" Width="160" />
        </StackPanel>
        <StackPanel Grid.Row="16" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="SerialError" Margin="0,4,8,0" Width="105" HorizontalContentAlignment="Right" FontSize="10" Foreground="#FF858585" FontWeight="Bold"/>
            <Button Command="{Binding }" Width="16" Height="16" ToolTip="" Margin="0,1,0,0">
                <Path Data="{DynamicResource Refresh}" Fill="#FF4692CC" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="17" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>
        
        <StackPanel Grid.Row="18" Grid.Column="1" Orientation="Horizontal">
            <Label Content="SerialPin Change" Margin="3,3,6,0" Width="105" HorizontalContentAlignment="Right"/>
            <ComboBox ItemsSource="{Binding SerialPinChange}" SelectedItem="{Binding SelectedSerialPinChange}" Margin="6,0,6,0" Width="160" />            
        </StackPanel>
        <StackPanel Grid.Row="18" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="SerialPinChange" Margin="0,4,8,0" Width="90" HorizontalContentAlignment="Right" FontSize="10" Foreground="#FF858585" FontWeight="Bold"/>
            <Button Command="{Binding }" Width="16" Height="16" ToolTip="" Margin="0,1,0,0">
                <Path Data="{DynamicResource Refresh}" Fill="#FF4692CC" Stretch="Uniform"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="19" Grid.Column="1" Grid.ColumnSpan="3">
            <Separator Height="3" Background="#FF3D3D3D"/>
        </StackPanel>
    </Grid>
</UserControl>
